<%- include("partials/header"); %>
<br>
<div class="container">
    <div class="row">
        <aside class="col-md-4 order-md-2 mb-4 bg-secondary rounded">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <p class="text muted text-center">Your cart</p>
                <span class="badge badge-dark badge-pill" id="totalItems"></span>
            </h4>
            <ul class="list-group mb-3" id="checkoutItems">

            </ul>

        </aside>
        <div id="inputFields" class="container">
            <% console.log(error) %>
            <h3>Contact Information</h3>
            <form action="/checkout" method="POST" class="form-group row" style="display: inline;" id="checkoutForm">
                <div class="input-group justify-content-left">
                    <div class="input-group-prepend">
                        <label class="input-group-text w-100" for="customer[name]">Name: </label>
                    </div>

                    <input class="form-control w-75" type="text" name="customer[name]" id="customer[name]"
                        placeholder="Enter your name" required>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text w-100" for="customer[email]">Email: </label>
                    </div>

                    <input class="form-control w-75" type="email" name="customer[email]" id="customer[email]"
                        placeholder="Enter your email" required>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text w-100" for="customer[phone]">Phone: </label>
                    </div>
                    <input class="form-control w-75" type="tel" name="customer[phone]" id="customer[phone]"
                        placeholder="Enter your phone number" required>
                </div>
                <br>
                <h3>Address</h3>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text w-100" for="street">Street: </label>
                    </div>
                    <input class="form-control w-75" class="form-control" type="text" name="customer[address][street]"
                        id="street" placeholder="Enter your street addresss" required>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text w-100" for="city">City: </label>
                    </div>

                    <input class="form-control w-75" type="text" name="customer[address][city]"
                        placeholder="Enter the city you reside in" id="city" required>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text w-100" for="state">State: </label>
                    </div>
                    <input class="form-control w-75" type="text" name="customer[address][state]"
                        placeholder="Enter your 2 digit state code. Ex. AR" maxlength="2" id="state" required>
                </div>
                <br/>
                <button class="btn btn-light" type="submit" id="submitCart">Submit</button>
        </div>
        </form>
        <% if(error) { %>
        <p><%= error %></p>
        <% } %>

    </div>
</div>
<%- include("partials/footer"); %>