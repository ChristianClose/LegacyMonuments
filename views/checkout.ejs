<%- include("partials/header"); %>
<br>
<h3>Contact Information</h3>
<div id="inputFields">
    <form action="/checkout" method="POST" style="display: inline;">
        <div class="input-group mb3">
            <label class="input-group-text">Name: </label>
            <input type="text" name="customer[name]" placeholder="Enter your name">
        </div>

        <div class="input-group mb3">
            <label class="input-group-text">Email: </label>
            <input type="email" name="customer[email]" placeholder="Enter your email">
        </div>

        <div class="input-group mb3">
            <label class="input-group-text">Phone: </label>
            <input type="tel" name="customer[phone]" placeholder="Enter your phone number">
        </div>
        <br>
        <h3>Address</h3>
        <div class="input-group mb3">
            <label class="input-group-text">Street: </label>
            <input type="text" name="customer[address[street]]" placeholder="Enter your street addresss">
            <label class="input-group-text">City: </label>
            <input type="text" name="customer[address[city]]"   placeholder="Enter the city you reside in" id="city">
            <label class="input-group-text">State: </label>
            <input type="text" name="customer[address[state]]"  placeholder="Enter your 2 digit state code. Ex. AR" maxlength="2" id="state">
        </div>
        <br>

        <input class="btn btn-light" type="submit">
    </form>
<%- include("partials/footer"); %>